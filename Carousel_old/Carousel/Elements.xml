<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <ClientWebPart Name="Carousel" Title="Carousel" Description="Presenta el contenido en un carrusel" DefaultWidth="300" DefaultHeight="200">

    <!-- Content element identifies the location of the page that will render inside the client web part
         Properties are referenced on the query string using the pattern _propertyName_
         Example: Src="~appWebUrl/Pages/ClientWebPart1.aspx?Property1=_property1_" -->
    <Content Type="html" Src="~appWebUrl/Pages/Carousel.aspx?{StandardTokens}&amp;Web=_Web_&amp;List=_List_&amp;ShowIndicators=_ShowIndicators_&amp;Show Arrows=_Show Arrows_" />

    <!-- Define properties in the Properties element.
         Remember to put Property Name on the Src attribute of the Content element above. -->
    <Properties>
      <Property Name="Web" Type="string" RequiresDesignerPermission="false" DefaultValue="" WebDisplayName="Sitio Web" />
      <Property Name="List" Type="string" RequiresDesignerPermission="false" DefaultValue="" WebDisplayName="Lista" />
      <Property Name="ShowIndicators" Type="string" RequiresDesignerPermission="false" DefaultValue="" WebDisplayName="Mostrar indicadores" />
      <Property Name="Show Arrows" Type="string" RequiresDesignerPermission="false" DefaultValue="" WebDisplayName="Mostrar flechas de desplazamiento" />
    </Properties>

  </ClientWebPart>
</Elements>
